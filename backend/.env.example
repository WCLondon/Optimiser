# Backend Environment Configuration
# Copy this to .env and update with your actual values

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_METRICS_BUCKET=promoter-metrics
SUPABASE_PDFS_BUCKET=promoter-pdfs

# Auto-quote threshold (in GBP)
AUTO_QUOTE_THRESHOLD=20000.0

# Email Configuration (for manual review notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=quotes@wildcapital.co.uk
SMTP_FROM_NAME=Wild Capital BNG Quotes

# Reviewer emails (comma-separated)
REVIEWER_EMAILS=reviewer1@example.com,reviewer2@example.com

# VAT rate (0.20 = 20%)
VAT_RATE=0.20

# Quote validity (in days)
QUOTE_VALIDITY_DAYS=30

# Redis (for job queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=43200
